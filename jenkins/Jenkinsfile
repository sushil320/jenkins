pipeline {
    agent none  
 

    stages{
        stage('BUILD') {
            
            agent { label: 'master' }
            
            steps{
                 sh '''
                    sleep 5
                    echo "This is a BUILD stage $BRANCH_NAME"
                '''
            }
        }

        stage('TEST') {
            
            agent { label: 'slave1' }
            
            steps {
                sh '''
                    sleep 6
                    echo "This is a TEST stage $BRANCH_NAME"
                '''
            }
        }

        stage('DEPLOY') {
            
            agent { label: 'slave2' }
            
            steps{
                sh '''
                    sleep 5
                    echo "This is a DEPLOY stage $BRANCH_NAME"
                '''
            }
        }
    }
}

